{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
<div class="formDiv row" id="vue-price" data-prices="{{ price.toArray|json_encode }}">
    {{ form_start(form, {'attr': {'class': 'col-12 col-lg-8 offset-0 offset-lg-2'}}) }}
    <h2 class="formTitle">Réservez vos places : </h2>
    {{ form_widget(form) }}
    <div class="d-flex justify-content-around">
        <p><i class="fas fa-ticket-alt primary-color mr-3"></i>Nombre de places : { totalPlaces }</p>
        <p><i class="fas fa-euro-sign primary-color mr-3"></i>Prix total : { totalPrice } €</p>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-turquoise">{{ button_label|default('Valider') }}</button>
    </div>
    {{ form_end(form) }}
</div>



{% extends 'base.html.twig' %}

{% block title %}Spectacle{% endblock %}

{% block body %}
    <h1>Spectacle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spectacle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spectacle.name }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ spectacle.place }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ spectacle.date ? spectacle.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ spectacle.capacity }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ spectacle.poster }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ spectacle.updatedAt ? spectacle.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('spectacle_index') }}">back to list</a>

    <a href="{{ path('spectacle_edit', {'id': spectacle.id}) }}">edit</a>

    {{ include('spectacle/_delete_form.html.twig') }}
{% endblock %}
